<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom_light_green"
    tools:context="LoginActivity">

    <LinearLayout
        android:background="@drawable/rounded_border_rectangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/cat_gif_login_activity"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/hello_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="@string/nameRequest"
            android:textColor="@color/text_color_dark"
            android:textSize="20sp"
            android:layout_marginBottom="30dp"/>

        <EditText
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:ems="10"
            android:textColor="@color/text_color_dark"
            android:layout_marginBottom="20dp"
            android:textColorHint="@color/text_color_dark"
            android:fontFamily="@font/roboto_light"
            android:hint="Enter your name"
            android:inputType="text"

            />

        <Button
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:minHeight="170dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/action_sign_in_short"
            app:cornerRadius="20dp"
            android:textColor="@color/text_color"
            android:backgroundTint="@color/custom_purple"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
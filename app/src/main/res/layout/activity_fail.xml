<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".game.FailActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/fail_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/fail_text"
            android:textColor="@color/text_color_dark"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/try_again_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/try_again_text"
            android:layout_gravity="center"
            android:textColor="@color/text_color_dark"
            android:textSize="30sp" />

        <Button
            android:id="@+id/continue_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/text_color_dark"
            android:minWidth="250dp"
            android:minHeight="40dp"
            android:layout_gravity="center"
            android:text="@string/continue_text"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:cornerRadius="20dp"></Button>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>